<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_state"
                    android:textSize="18sp" />


                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/connection_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disconnected"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Temp : "
                    android:textSize="18sp" />


                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/data_value"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/no_data"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Pop up Control" />

                <Switch
                    android:id="@+id/MainSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:checked="true"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A/C power" />

                <Switch
                    android:id="@+id/ACSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:enabled="false"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/car_frame"
        android:layout_width="260dp"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:background="@drawable/car_seat1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="23dp">


            <TextView
                android:id="@+id/seat1"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="3dp"
                android:background="@color/grey"
                android:gravity="center"
                android:text="seat\n1" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/seat2"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:background="@color/grey"
                android:gravity="center"
                android:text="seat\n2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginStart="-2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="23dp">

            <TextView
                android:id="@+id/seat3"
                android:layout_width="33dp"
                android:layout_height="47dp"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="30dp"
                android:background="@color/grey"
                android:gravity="center"
                android:text="seat\n3" />


            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/seat4"
                android:layout_width="28dp"
                android:layout_height="47dp"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="-2dp"
                android:layout_marginBottom="30dp"
                android:background="@color/grey"
                android:gravity="center"
                android:text="seat\n4" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/seat5"
                android:layout_width="33dp"
                android:layout_height="47dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="-2dp"
                android:layout_marginBottom="30dp"
                android:background="@color/grey"
                android:gravity="center"
                android:text="seat\n5" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">


            <View
                android:id="@+id/occupied"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@color/skyblue"
                tools:layout_editor_absoluteX="302dp"
                tools:layout_editor_absoluteY="90dp" />


            <TextView
                android:id="@+id/text_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Occupied"
                tools:layout_editor_absoluteX="333dp"
                tools:layout_editor_absoluteY="90dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">

            <View
                android:id="@+id/empty"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@color/yellow"
                tools:layout_editor_absoluteX="302dp"
                tools:layout_editor_absoluteY="132dp" />

            <TextView
                android:id="@+id/text_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Empty"
                tools:layout_editor_absoluteX="333dp"
                tools:layout_editor_absoluteY="133dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">

            <View
                android:id="@+id/unknown"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@color/grey"
                tools:layout_editor_absoluteX="302dp"
                tools:layout_editor_absoluteY="132dp" />


            <TextView
                android:id="@+id/text_unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Unknown"
                tools:layout_editor_absoluteX="333dp"
                tools:layout_editor_absoluteY="133dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Show_alarm_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Setting warning temp : 20â„ƒ" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/plus_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="Popup_plus_btn"
                    android:text="+"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/minus_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="Popup_minus_btn"
                    android:text="-" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Show_AC_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Setting A/C temp : --" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/plus_AC_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="AC_plus_btn"
                    android:textSize="16sp"
                    android:text="+" />

                <Button
                    android:id="@+id/minus_AC_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="AC_minus_btn"
                    android:text="-" />

                <Button
                    android:id="@+id/send_AC_btn"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:onClick="AC_OK_btn"
                    android:text="OK"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>